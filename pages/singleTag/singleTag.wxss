/* pages/search/search.wxss */

.search-btn {
  color: white;
  background-color:lightpink;
}
.avatar {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
  background-position: top;
  border-radius: 4px 4px 0px 0px;
  
}
.searchbar{
  display: flex;
  align-items:center;
  margin: 10rpx;
  background-color:lightgrey;
  border-radius: 8rpx;
  box-shadow: 2px 2px 3px rgba(0,0,0,0.2);
  width: 600rpx;
  padding-left: 40rpx;
  height: 50rpx;
  opacity: 0.5;
}

.banner-wrapper {
  display: flex;
  justify-content: center;
  position: relative;
  width: 100vw;
  height: 480rpx;
}
.row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
/*  */
.section {
  margin-top: 100rpx;
  margin-bottom: 10rpx;
}

.container{
  padding-top:0rpx;
}

 
.card-box1 {
  margin:0 0 600rpx 50rpx;
}

.index-card {
  display: inline-flex;
  margin-top: 16rpx;
  background-color: lightgray;
  width: 90vw;
  height: 18vh;
  border-radius: 8rpx;
}

 .img {
  object-fit: cover;
  background-color: lightgreen;
  height: 100%;
  width: 18vh;
  border-radius: 8rpx 0rpx 0rpx 8rpx;
} 
