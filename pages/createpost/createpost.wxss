/* pages/createpost/createpost.wxss */
.form {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 10rpx 0 0 20rpx;
  }
  .content{
    margin-top: 80rpx;
  }
  .section {
  margin: 30rpx 0;
  }
  .btn-area {
  display: flex;
  justify-content: space-evenly;
  }
  .text-box{
    background-color: lightgray;
    width: 700rpx;
    height: 200rpx;
  }
  .body-view{
    width: 350rpx;
  }
  .picker-section {
    margin: 20rpx 0;
  }
  .box {
    box-shadow: 1rpx 1rpx 2rpx 2rpx lightgray;
    border-radius: 5%;
    width: 25 rpx;
  }
  .upload{
    width: 150rpx;
    height: 150rpx;
    border-radius: 5%;
    background-color: lightgray;
    display: flex;
    align-items: center;
    justify-content: center;
  }
 
  .image-upload {
    width: 300rpx;
    height:300rpx;
    object-fit: fill;
  }
  .big{
    font-weight: 1600;
    font-size: 42rpx;
  }