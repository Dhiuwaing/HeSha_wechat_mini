.active {
  border: solid;
  border-color: orange;
  border-width: 7rpx;
}

.inactive {
 

}


.mainFrame {
  margin-top: 0rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  border: 0px solid #ebebeb;
  
}

.container {
  height: 1000rpx;
}

.banner {
  position: fixed;
  height: 100vh;
  width: 100vw;
  background-color:#191F24;
}

.box {
  margin: 16rpx;
  position: sticky;
  top: 260rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}

.block {
  border-radius: 8rpx;
  box-shadow: 8rpx 8prx 3rpx white;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  background-size: cover;
  background-position: center;
  margin:16rpx;
  width: 180rpx;
  height: 180rpx;
}

.item {
width: 100%;
height: 20%;
border-radius: 0rpx 0rpx 8rpx 8rpx;
background-color:white;
display: flex;
justify-content: center;
align-items: flex-start;
font-size: 24rpx;
color: #191F24;

}


.btn-green {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: white;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 60vw;
  height: 4vh;
  margin-bottom: 22%;
  background-color: #F08A5E;
}
.gin {
  background-image: url(https://d3r6kbofdnmd8.cloudfront.net/media/catalog/product/cache/image/1536x/a4e40ebdc3e371adff845072e1c73f37/9/8/98876_Bombay-Sapphire-London-Dry-Gin-10L-47-Vol_4.jpg);
}