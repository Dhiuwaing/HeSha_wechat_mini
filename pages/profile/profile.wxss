  font-size: 24px;
  margin:30rpx;
}
.title {
  color: grey;
  font-size: 18px;
  margin:30rpx;
}
.p {
  font-size:24rpx;
  margin-top:8rpx;
  padding-left: 32rpx;
  padding-right: 32rpx ;
  padding-bottom: 20rpx;
  
}
.p1 {
  background-color: #F5F5F5;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size:24rpx;
  padding-right: 32rpx ;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  object-fit: cover;
  
}
.h3  {
  font-size:28rpx;
  color: rgb(87, 87, 87);
  font-weight: bolder;
  padding-left: 32rpx;
  padding-bottom: 10rpx;
}
.h2 {
  font-size:40rpx;
  color: rgb(44, 44, 44);
  font-weight: bolder;
  padding-left: 32rpx;
  padding-bottom: 5rpx;
  margin-top:8rpx;
}
.search-button {
  opacity:0.5;
}
.avatar {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
  background-position: top;
  border-radius: 4px 4px 0px 0px;
  
}
.banner-wrapper-landing {
  display: flex;
  justify-content: center;
  position: relative;
  width: 100vw;
  height: 280rpx;
  align-items: center;
  padding-top: 5vw;
  padding-bottom: 0vw;
}
.banner-hesha {
  position: absolute;
  background-size: cover;
  background-position: center;
  width: 40vw;
  height: 10vw;
  /* padding-bottom: 130rpx; */
}


.divider {
  height:60rpx;
  background-color: white;
}

.card-product {
  display: flex;
  flex-direction: column;
  width: 45vw;
  background-color: white;
  box-shadow: 2rpx 2rpx 5rpx rgba(0,0,0,0.1);
  justify-content: space-between;
  border-radius: 4px;
  /* margin: 16rpx; */
  
}
.card-product-1 {
  height:303rpx;
  width: 252rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  /* padding: 16px; */
  /* margin: 8px; */
  border-radius: 4px;
}
.row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.section {
  /* margin-top: 100rpx; */
  z-index: 11;
}

