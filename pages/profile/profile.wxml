<!-- <open-data type="userAvatarUrl"></open-data>
<open-data type="userNickName"></open-data> -->
<view class="container">
 <view class="section-blue-bar">	
  <view class="blue-bar"></view>
  <image class="img img-circle" src="{{avatarUrl}}"></image>
 </view>
</view>
<!-- 需要使用 button 来授权登录 -->
<button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">Authorize</button>
<view>My Likes</view> 
<view class="recipes-box">
<view class="card-box" >
  <view class="index-card" bindtap="GoToRecipe" wx:for="{{recipes}}" wx:for-item="recipe" data-id="{{recipe.id}}">
  <view class="img">
    <image class="img-class" src="../images/cocktails.png"></image>
    </view>
    <view class="text">
      <view class="h2">{{recipe.name}}</view>
      <view class="p"> {{recipe.description}}</view>
    </view>
  </view>
</view>
</view> 

