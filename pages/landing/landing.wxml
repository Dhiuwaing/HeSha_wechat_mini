<!--pages/posts/posts.wxml-->
<view class="banner-wrapper-landing">
  <image class="banner-hesha" src="../images/HESHALOGObig.png"></image>
</view>
  <view class="section">
    <view class="section__title">
    <view class="searchbar" bindtap="GoToSearch">Search</view>
    </view>
</view>
<view class="roww">
  <view class="card-product" wx:for="{{posts.posts}}" wx:for-item="post" data-id="{{post.id}}" bindtap="goToPost" >

    <image class='avatar' src="{{post.image}}"></image>
  <view class='h2'>{{post.title}} </view> 
 <view class="avatar-box">
  <image class='avatarr' src="{{post.user.avatar}}"></image>
  <view class='pp1'>{{post.user.name}}</view>
  </view>

  <view class='search-tag1' >{{post.recipe.name}}</view>

  </view>
  <view wx:for="{{posts.length%2}}" class="card-product-1"></view> 
</view> 



