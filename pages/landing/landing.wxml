<!--pages/posts/posts.wxml-->
<view class="banner-wrapper-landing">
  <image class="banner-hesha" src="../images/HESHAbanner.png"></image>
  <view class="section">
    <view class="section__title"></view>
    <view class="searchbar" bindtap="GoToSearch">Search</view>
  </view>
</view>
<!-- <view class="divider"></view> -->
<view class="row">
  <view class="card-product" wx:for="{{posts}}" wx:for-item="post" data-id="{{post.id}}" bindtap="goToShowPost">
    <image class='avatar' src="{{post.image}}"></image>
  <view class='h2'>{{post.title}} </view> 
  <view class='h3'>{{post.description}}</view>
  <view class='p'>{{post.user}}</view>
  <view class='p1'>{{post.recipe}}</view>
  </view>
  <view wx:for="{{posts.length%2}}" class="card-product-1"></view>
</view>