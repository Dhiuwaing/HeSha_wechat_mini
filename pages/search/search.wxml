<!--pages/search/search.wxml-->

<view class="container">
<view class="banner-wrapper">
  <view class="section">
    <view class="section__title"></view>
    <input class="searchbar" bindinput="searchInput" name="input" placeholder="Search" />
    <button class="btn" style="background: grey" bindtap="searchForm">Search</button>
  </view>
</view>

<view class="card-box">
  <view class="index-card" wx:for="{{recipes.recipes}}" wx:for-item="recipe" data-id="{{recipe.id}}" bindtap="goToRecipe">
    <image class="img" src="{{recipe.image}}"></image>
    <view class="text">
      <view class="h2">{{recipe.name}}</view>
      <view class="p">{{recipe.description}}</view>
      <view class="h4">{{recipe.ingredients}}</view>
    </view>
  </view>
</view>




