/* pages/search/search.wxss */
p {
  font-size:24rpx;
  margin-top:8rpx;
  padding-left: 32rpx;
  padding-right: 32rpx ;
  padding-bottom: 20rpx;
  
}
.p1 {
  background-color: #F5F5F5;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size:24rpx;
  padding-right: 32rpx ;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  object-fit: cover;
  
}
.h3  {
  font-size:28rpx;
  color: rgb(87, 87, 87);
  font-weight: bolder;
  padding-left: 32rpx;
  padding-bottom: 10rpx;
}
.h2 {
  font-size:40rpx;
  color: rgb(44, 44, 44);
  font-weight: bolder;
  padding-left: 32rpx;
  padding-bottom: 5rpx;
  margin-top:8rpx;
}
.search-button {
  opacity:0.5;
  width: 5rpx;
}
.avatar {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
  background-position: top;
  border-radius: 4px 4px 0px 0px;
  
}

.banner-wrapper {
  display: flex;
  justify-content: center;
  position: relative;
  width: 100vw;
  height: 480rpx;
}
.row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.section {
  margin-top: 100rpx;
  margin-bottom: 10rpx;
}

.searchbar {
  display: flex;
  align-items:center;
  margin: 0 auto;
  background-color: white;
  border-radius: 8rpx;
  box-shadow: 2px 2px 3px rgba(0,0,0,0.2);
  width: 600rpx;
  padding-left: 40rpx;
  height: 50rpx;
}
.search-tag {
  display: flex;
  align-items:center;
  background-color: rgba(0,0,0,0.2);
  width: 200rpx;
  height: 50rpx;
  border-radius: 5%;
  justify-content: center;
  margin: 1vh;
}
.btn {
  background-color: none;
  margin-top: 30rpx;
  color: white;
}
.container{
  padding-top:0rpx;
}